<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.creapix.louisss13.smartchandoid">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayerStatsActivity"
            android:label="@string/title_activity_player_stats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BrowseTournamentsActivity"
            android:label="@string/title_activity_browse_tournaments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PointCountActivity" />
        <activity
            android:name=".MatchDetailsActivity"
            android:label="@string/title_activity_match_details" />
        <activity android:name=".MonitoredMatchesActivity" />
    </application>

</manifest>